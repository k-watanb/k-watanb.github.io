@charset "UTF-8";.author{background-color:#fff;padding:1rem;border-radius:4px;text-align:center;outline:1px solid;outline-color:#ccc;outline-offset:0}.author .author-thumb{margin:0 auto 1rem;width:8rem;height:8rem;border-radius:50%;background-size:cover;background-position:50%}.author .author-name{font-family:raleway;margin-bottom:.5rem;font-weight:700}.author .author-name a{position:relative;display:inline-block;transition:.3s}.author .author-name a:after{position:absolute;bottom:-.2rem;left:50%;content:'';width:0;height:1px;background-color:#2196f3;transition:.3s;-webkit-transform:translateX(-50%);transform:translateX(-50%)}.author .author-name a:hover::after{width:100%}.author .author-facts{padding-inline-start:0}.author .author-facts li{display:inline}.author .author-facts li a{display:inline-block;background-color:#eceff1;width:1.75rem;height:1.75rem;line-height:1.75rem;text-align:center;color:#333;font-size:.9rem;border-radius:5px}.author .author-facts li a:hover{color:#fff;background-color:#333}.author .author-description{text-align:left;font-size:.8rem}.author .author-description p{margin:.5rem 0;line-height:1.2rem}